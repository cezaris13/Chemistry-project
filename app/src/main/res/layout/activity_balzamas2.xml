<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pijus.chemijosprojektas.MainActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/ivestisba1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alyvuogių aliejus, g"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ivestisba2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bičių vaškas, g"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ivestisba3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Želatina, g"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ivestisba4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vanduo, ml"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textViewba2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonba3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skaičiuoti" />
</LinearLayout>