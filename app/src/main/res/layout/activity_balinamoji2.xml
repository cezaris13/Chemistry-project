<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pijus.chemijosprojektas.MainActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/ivestisb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ciberžolė, arbat. šaukšteliai"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ivestisb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kokosų aliejus, atbat. šaukšteliai"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ivestisb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Eterinis aliejus, ml"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textViewb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skaičiuoti" />
</LinearLayout>