<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pijus.chemijosprojektas.MainActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/ivestisl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Aliejus, g"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ivestisl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bičių vaškas, g"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ivestisl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Eterinis aliejus, lašai"
        android:inputType="phone" />


    <EditText
        android:id="@+id/ivestisl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alavijas, lašai"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ivestisl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vitaminas E, tabletės"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textViewl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skaičiuoti" />
</LinearLayout>